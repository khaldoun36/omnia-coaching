---
// to optimise the logo svg
import { Icon } from "astro-icon";
---

<header class="primary-header">
  <a href="/" class="logo text-xl font-medium text-textDark">
    <Icon name="logo" />
    OMNIA Coaching
  </a>
  <!-- Mobile Menu Start -->
  <svg class="ham hamRotate ham8" viewBox="0 0 100 100" width="80">
    <path
      class="line top"
      d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"
    ></path>
    <path class="line middle" d="m 30,50 h 40"></path>
    <path
      class="line bottom"
      d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"
    ></path>
  </svg>
  <!-- Mobile Menu end -->
  <nav class="primary-nav">
    <ul class="nav-links">
      <li class="text-xl font-medium text-textDark md:text-sm">
        <a href="/">Home</a>
      </li>
      <li class="text-xl font-medium text-textDark md:text-sm">
        <a href="/">About Me</a>
      </li>
      <li class="text-xl font-medium text-textDark md:text-sm">
        <a href="/">How can I help</a>
      </li>
      <li class="text-xl font-medium text-textDark md:text-sm">
        <a href="/">Insights</a>
      </li>
      <li class="text-xl font-medium text-textDark md:text-sm">
        <a href="/">Free resources</a>
      </li>
    </ul>
    <a href="/" class="nav-cta btn btn-primary">Schedule a call</a>
  </nav>
</header>

<!-- JavaScript -->

<script>
  const button = document.querySelector(".ham8");
  const navbar = document.querySelector(".primary-nav");

  button.addEventListener("click", () => {
    button.classList.toggle("active");
    navbar.classList.toggle("active");
  });
</script>

<style>
  /* header */
  .primary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
  }
  [astro-icon="logo"] {
    width: 2.5rem;
    aspect-ratio: 1;
    padding-right: 0.5rem;
  }

  /* Navbar Start*/

  .primary-nav {
    position: fixed;
    inset: 0 0 0 30%;
    /* background: #d9d9d9; */
    backdrop-filter: blur(1rem) saturate(180%);
    background-color: rgba(191, 189, 193, 0.75);
    border: 1px solid rgba(209, 213, 219, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding-block: clamp(7.5rem, 10vw, 10rem);
    transform: translateX(100%);
    transition: transform 400ms;
  }

  .primary-nav.active {
    transform: translateX(0);
  }
  /* Navbar end*/

  /* Nav-links start */
  .nav-links {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links > * {
    margin-top: 4rem;
  }

  /* Nav-links end */

  /* Mobile Button Start */

  .ham {
    cursor: pointer;
    transition: transform 400ms;
    user-select: none;
    z-index: 1;
  }
  .hamRotate.active {
    transform: rotate(45deg);
  }
  .hamRotate180.active {
    transform: rotate(180deg);
  }
  .line {
    fill: none;
    transition: stroke-dasharray 400ms, stroke-dashoffset 400ms;
    stroke: #202020;
    stroke-width: 5.5;
    stroke-linecap: round;
  }
  .ham8 .top {
    stroke-dasharray: 40 160;
  }
  .ham8 .middle {
    stroke-dasharray: 40 142;
    transform-origin: 50%;
    transition: transform 400ms;
  }
  .ham8 .bottom {
    stroke-dasharray: 40 85;
    transform-origin: 50%;
    transition: transform 400ms, stroke-dashoffset 400ms;
  }
  .ham8.active .top {
    stroke-dashoffset: -64px;
  }
  .ham8.active .middle {
    //stroke-dashoffset: -20px;
    transform: rotate(90deg);
  }
  .ham8.active .bottom {
    stroke-dashoffset: -64px;
  }
  /* Mobile Button end */

  /* ***************** */
  /* Desktop           */
  /* ***************** */

  @media screen and (min-width: 52rem) {
    .primary-header {
      grid-column: 2 / -2;
      flex-direction: row;
    }

    .ham8 {
      display: none;
    }

    .primary-nav {
      position: static;
      transform: translateX(0);
      background-color: transparent;
      flex-direction: row;
      padding-block: 0;
    }

    .nav-links {
      flex-direction: row;
    }

    .nav-links > * {
      margin-top: 0;
      padding-right: 2rem;
    }
  }
</style>
